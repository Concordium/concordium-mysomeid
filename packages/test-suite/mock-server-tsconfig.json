{
    "compilerOptions": {
      "lib": [
        "ESNext",
        "dom"
      ],
      "outDir": "lib",
      "removeComments": true,
      "target": "ES6",
  
      "baseUrl": "./",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "paths": {},
  
      "sourceMap": true, 
      "sourceRoot": "/",
  
      "alwaysStrict": false,
      "allowUnreachableCode": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
  
      "noImplicitReturns": false,
      "noUncheckedIndexedAccess": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*"
    ]
}

