{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": ["scripts/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "**/*.spec.js"]
  }
