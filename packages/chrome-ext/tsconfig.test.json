{
    "compilerOptions": {
      "declaration": false,
      "alwaysStrict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "dom"],
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "ES2020",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "skipLibCheck": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "noEmit": true,
      "noFallthroughCasesInSwitch": true,
      "typeRoots": ["node_modules/@types", "jest", "node"]
    },
    "include": ["./index.d.ts", "src", "babel.config.js", "**/*.test.ts", "**/*.test.tsx"],
    "exclude": ["node_modules", "vendor", "public"],
    "compileOnSave": false
  }

  