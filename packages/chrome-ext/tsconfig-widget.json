{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "build/widget"
  },
  "include": [
    "src-widget",
    "src-widget/custom.d.ts"
  ]
}
