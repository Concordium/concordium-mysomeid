{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "ES2021.String"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "build/injected",
    "types": ["node"],
    "typeRoots": ["types", "@types"]
  },
  "include": [
    "src-injected",
    "src-injected/custom.d.ts"
  ]
}
